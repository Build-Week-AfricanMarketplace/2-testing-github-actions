{
  "lerna": "5.1.4",
  "version": "1.13.0",
  "useNx": true,
  "useWorkspaces": true,
  "changelogPreset": "angular",
  "packages": ["src/components/*"],
  "ignoreChanges": ["**/*.test.ts", "**/*.stories.ts", "**/*.md"],
  "command": {
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock"]
    },
    "publish": {
      "conventionalCommits": true,
      "registry": "https://packages.aa.com/artifactory/api/npm/npm-public/",
      "message": "chore(release): publish %v"
    }
  }
}
